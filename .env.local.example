# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Database (Optional in development - tracking will be disabled gracefully)
# Required for interaction tracking in production
# Example: "postgresql://username:password@localhost:5432/database_name"
DATABASE_URL="postgresql://..."

# Redis/Upstash (Optional in development - session caching will be disabled gracefully)
# Required for real-time session tracking in production
# Free tier available at https://upstash.com
UPSTASH_REDIS_REST_URL="https://..."
UPSTASH_REDIS_REST_TOKEN="..."

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN="..."

# Admin Access
ADMIN_PASSWORD="your-secure-password"

# Analytics Filtering
# Comma-separated list of IP addresses to exclude from analytics
# Example: "123.456.789.0,98.765.432.1"
EXCLUDED_IPS=""

# Your main development IP (will be automatically excluded)
DEV_IP=""

# Google Analytics 4 Integration
# GA4 Property ID (found in GA4 Admin > Property Settings)
# Example: "123456789"
GA4_PROPERTY_ID=""

# GA4 Measurement ID for client-side tracking
# This should be the SAME ID for both nest-haus.at and da-hoam.at
# to enable multi-domain tracking within a single GA4 property
# Example: "G-XXXXXXXXXX"
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-5Y5KZG56VK"

# Google Analytics Credentials (choose ONE method below)

# Method 1: For local development - Path to service account JSON file
# Download from Google Cloud Console > IAM & Admin > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS="./google-analytics-credentials.json"

# Method 2: For Vercel/production - Base64 encoded credentials
# Convert your JSON file: cat credentials.json | base64
# GOOGLE_ANALYTICS_CREDENTIALS_BASE64=""

# Stripe Payment Integration
# Get test keys from: Stripe Dashboard > Developers > API keys (with Test Mode ON)
# Test keys start with pk_test_ and sk_test_
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Stripe Webhook Secret (get from Stripe Dashboard > Developers > Webhooks)
# ⚠️ IMPORTANT: Use www subdomain to avoid redirect issues!
# Create a webhook pointing to: https://www.your-domain.com/api/webhooks/stripe
# Example for this project: https://www.nest-haus.at/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET="whsec_..."

# Payment Configuration
PAYMENT_MODE="deposit"
DEPOSIT_AMOUNT="50000"  # 500.00 EUR in cents
CURRENCY="eur"

# Cron Job Security (for webhook health checks and other scheduled tasks)
# Generate a secure random string: openssl rand -base64 32
CRON_SECRET="your-secure-cron-secret"

# Admin Email (for webhook health check alerts)
ADMIN_EMAIL="admin@nest-haus.at"

