# Test Environment Configuration
# Copy this file to .env.test and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Test Database URL (use a separate database for testing)
DATABASE_URL="postgresql://test:test@localhost:5432/nest_haus_test"

# ============================================
# REDIS CONFIGURATION
# ============================================

# Test Redis URL (use database 1 for tests, 0 for development)
REDIS_URL="redis://localhost:6379/1"

# ============================================
# STRIPE TEST KEYS
# ============================================

# Stripe Secret Key (TEST MODE - must start with sk_test_)
STRIPE_SECRET_KEY="sk_test_YOUR_TEST_SECRET_KEY_HERE"

# Stripe Publishable Key (TEST MODE - must start with pk_test_)
STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_TEST_PUBLISHABLE_KEY_HERE"

# ============================================
# PAYMENT CONFIGURATION
# ============================================

# Payment mode for testing (deposit or full)
PAYMENT_MODE="deposit"

# Deposit amount in cents (100 = â‚¬1 for testing)
DEPOSIT_AMOUNT="100"

# ============================================
# EMAIL SERVICE (RESEND)
# ============================================

# Resend API Key for email testing
RESEND_API_KEY="re_YOUR_TEST_KEY_HERE"

# Email addresses for testing
RESEND_FROM_EMAIL="onboarding@resend.dev"
ADMIN_EMAIL="admin@nest-haus.at"
SALES_EMAIL="sales@nest-haus.at"

# ============================================
# APPLICATION SETTINGS
# ============================================

# Node environment
NODE_ENV="test"

# API Base URL
NEXT_PUBLIC_API_URL="http://localhost:3000"

# ============================================
# ICALENDAR SERVICE (OPTIONAL FOR TESTS)
# ============================================

# iCloud Calendar credentials (optional - tests will mock if not provided)
ICAL_USERNAME="your-email@icloud.com"
ICAL_PASSWORD="your-app-specific-password"
ICAL_CALENDAR_URL="https://p00-caldav.icloud.com/..."

# ============================================
# TEST-SPECIFIC SETTINGS
# ============================================

# Automatically clean up test data after tests
AUTO_CLEANUP="true"

# Test timeout in milliseconds
TEST_TIMEOUT="10000"

# ============================================
# NOTES
# ============================================

# 1. Get Stripe test keys from: https://dashboard.stripe.com/test/apikeys
# 2. Create a separate PostgreSQL database for testing
# 3. Use Redis database 1 (not 0) to avoid conflicts with development
# 4. Never commit this file with real credentials
# 5. Keep .env.test in .gitignore

